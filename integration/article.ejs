<%- include('partials/header') %>

      <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
        <div class="pure-g">
          <article class="post pure-u-1">
            <header>
              <h1><%= requestedArticle.title %></h1>
              <div class="post-meta">
                Par <a href="#"><%= requestedArticle.author %></a> 
                dans la catégorie <a href="#"><%= requestedArticle.category %></a>
              </div>
            </header>
            <figure class="post-picture">
              <img class="pure-img" src="images/<%= requestedArticle.img %>" alt="<%= requestedArticle.img_alt %>">
              <figcaption class="post-picture-caption"><%= requestedArticle.sub_title %></figcaption>
            </figure>
            <div class="post-content">
              <p><%= requestedArticle.text %></p>
            </div>
            <footer>
              <a class="pure-button" href="/">Retour à l'accueil</a>
            </footer>
          </article>
        </div>
      </main>
    </div>
  </body>
</html>